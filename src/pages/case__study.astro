---
import AltHero from "../components/AltHero.astro";
import CaseComponent from "../components/CaseComponent.astro";
import ImageContainer from "../components/ImageContainer.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Case Study";
---

<BaseLayout pageTitle={pageTitle}>
  <AltHero
    title="Taxes & Efficiency"
    titleColor="Case Studies single"
    theme="yellow__bg"
    img="alt-hero-case-study.png"
    altText="Three people smiling into the camera."
  />

  <div class="article">
    <div class="article__header">
      <div class="image">
        <ImageContainer
          img="case-study-img.png"
          altText="Two people discussing"
        />
      </div>
      <div class="article__information">
        <CaseComponent />
      </div>
    </div>
  </div>
</BaseLayout>
<style>
  /* Case__Study contains an area with a smaller width, the text, which should have a ch max-width */

  .article {
    display: grid;
    /* grid-template-columns:
    full
    breakout
    content
    inner
    
    */
    .article__header {
      display: grid;
      grid-template-rows: 1fr 3rem 1fr;
      grid-template-columns: 1fr;

      .image {
        grid-row: 1/3;
        grid-column: 1/-1;
      }

      .article__information {
        grid-row: 2;
        grid-column: 1/-1;

        position: relative;
        z-index: 1;
      }
    }
  }
</style>
