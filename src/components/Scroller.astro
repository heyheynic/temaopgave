---
import CardDynamic from "./CardDynamic.astro";
const { theme, data, layout } = Astro.props;
---

<!-- <ul class="scroller">
  {
    data.values.map((dataType) => (
      <CardDynamic {dataType} {theme} {layout} />
    ))
  }
</ul> -->
<ul class="scroller">
  <CardDynamic data={data} theme={theme} layout={layout} />
</ul>

<style>
  ul {
    grid-column: full;
    display: grid;
    grid-template-columns: inherit;

    list-style: none;
    overflow-x: auto;
    display: flex;
    gap: var(--gap);
    scroll-snap-type: x mandatory;
    gap: var(--gap);

    padding-inline: max(2rem, 50% - var(--content) / 2);

    > * {
      flex-basis: clamp(2rem, 65%, 400px);
      flex-shrink: 0;

      scroll-snap-align: center;
      scroll-snap-stop: always;
    }
  }

  ul {
    display: flex;
    overflow-x: auto;
    li {
      flex-basis: min(400px, 90%);
      flex-shrink: 0;
    }
  }
</style>
