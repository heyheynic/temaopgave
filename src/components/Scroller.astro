---
import CardDynamic from "./CardDynamic.astro";
const { theme } = Astro.props;

// Här ska jag mappa igenom json-filen istället:

// Projections: https://raw.githubusercontent.com/heyheynic/frontend-design-skoleopgave/main/resources/json/projections.json

// Core values: https://raw.githubusercontent.com/heyheynic/frontend-design-skoleopgave/main/resources/json/corevalues.json

// Employees https://raw.githubusercontent.com/heyheynic/frontend-design-skoleopgave/main/resources/json/employees.json
const { data } = Astro.props;
---

<ul class="scroller">
  {
    data.values.map((projections) => (
      <CardDynamic {projections} {theme} />
    ))
  }
</ul>

<style>
  ul {
    grid-column: full;

    list-style: none;
    overflow-x: auto;
    display: flex;
    gap: var(--gap);
    scroll-snap-type: x mandatory;
    gap: var(--gap);

    > * {
      flex-basis: clamp(2rem, 65%, 400px);
      flex-shrink: 0;

      scroll-snap-align: center;
      scroll-snap-stop: always;
    }
  }
</style>
