---
import { Icon } from "astro-icon/components";
import TitleColored from "./TitleColored.astro";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { employee } = Astro.props;
const { name, description, title, img, theme, slug } = employee;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/*.{jpeg,jpg,png,gif}"
);

console.log(Object.keys(images));

if (!images[img])
  throw new Error(
    `"${img}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`
  );
---

<article>
  <a href={`/team/${slug}`} class="active">
    <div class="image__container">
      <Image src={images[img]()} alt={title} />
      <TitleColored titleColor={title} theme={theme} />
    </div>
    <div class="text__area">
      <h2>{name}</h2>
      <p>{description}</p>
    </div>
  </a>
  <div class="links">
    <a href="">
      <Icon name="instagram" />
    </a>
    <a href="">
      <Icon name="facebook" />
    </a>
    <a href="">
      <Icon name="twitter" />
    </a>
  </div>
</article>

<style>
  article {
    display: grid;
    grid: 1fr / 1fr;
    text-align: center;
    height: fit-content;

    .active {
      .image__container {
        display: grid;
        grid: 1fr / 1fr;

        img {
          border-radius: 20px;
        }
        > * + * {
          place-self: end;
        }
      }

      .text__area {
        display: grid;
        grid: 1fr 1fr/ 1fr;
        gap: var(--gap);
      }
    }

    .links {
      display: flex;
      place-self: center;
      gap: var(--gap);
    }
  }
</style>
